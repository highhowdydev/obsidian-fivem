{
	"extends": "../../../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"paths": {
			"@components/*": ["components/*"],
			"@utils/*": ["utils/*"],
			"@hooks/*": ["hooks/*"],
			"@stores/*": ["stores/*"]
		}
	},
	"include": ["./**/*"]
}
